<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangeProductInfo"
    android:elevation="20dp"
    android:layout_marginTop="50dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="50dp">
    <RelativeLayout
        android:id="@+id/aproducts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <ImageView
        android:layout_marginVertical="20dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/aproduct_image"
        android:scaleType="centerCrop"
        android:layout_marginTop="2dp"
        />
        <EditText
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:id="@+id/aproduct_name"
            android:layout_below="@id/aproduct_image"
            />
    <EditText
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Product Description"
        android:layout_below="@+id/aproduct_name"
        android:textSize="15sp"
        android:textStyle="bold"
        android:id="@+id/aproduct_description"
        />
    <EditText
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Product Price"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/aproduct_description"
        android:id="@+id/aproduct_price"
        />
        <EditText
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Price"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/aproduct_price"
            android:id="@+id/aproduct_barcode"
            />
        <Button
            android:id="@+id/apply_changes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Apply Changes"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/aproduct_barcode"
            />
        <Button
            android:id="@+id/delete_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Delete Item"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/apply_changes"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>